<h3>Yeni Gönderi</h3>

<%= simple_form_for([:writer,@post], html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :title, label: "Başlık", placeholder: 'En fazla 50 karakter' %>
  <%= f.input :content, label: "İçerik", placeholder: 'En fazla 500 karakter' %>
  <%= f.submit 'Yolla Gitsin' %>
<% end %>
