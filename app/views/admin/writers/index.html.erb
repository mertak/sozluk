<h2>Yazarlar</h2>

<%= search_form_for [:admin, @search] do |f| %>

	<%= f.label "E-Posta"%>
        <%= f.search_field :email_cont, placeholder: '... İçerir' %>

	<%= f.label "İsim" %>
	<%= f.search_field :name_cont, placeholder: '... İçerir'%>

	<%= f.submit "Ara" %>
<% end %>
<div class="well well-sm">
<table class="table">
  <thead>
    <tr>
      <th>
        <%= sort_link(@search,"Yazar") %>
      </th>
      <th>
	İsim
      </th>
      <th>
        Düzenle
      </th>
      <th>
        Sil
      </th>
    </tr>
  </thead>
  <tbody>
  <%= render @writers %>
  </tbody>
</table>
</div>

<%= will_paginate @writers %>

